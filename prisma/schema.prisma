generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model User {
  id            String @default(uuid()) @id
  name          String
  password      String
  role          Int

  //assistants    Assistant[]
  experiment    Experiment[]
}

