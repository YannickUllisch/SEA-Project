generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model User {
  id        String @default(uuid()) @id
  name      String
  password  String
  role      Int
  //assistant Boolean @default(false)
}

model Experiment {
  id        String @default(uuid()) @id
}

model ParticipantTotalAnswer {
  id              String @id @default(uuid())

  demographics    Demographics?
  answers         ParticipantQuestionAnswer[]

}

model Demographics {
  id               String @id @default(uuid())
  gender           String
  age              Int
  country          String

  totalAnswerId    String @unique
  totalAnswer      ParticipantTotalAnswer @relation(fields: [totalAnswerId], references: [id])
}

model ParticipantQuestionAnswer {
  id              String @id @default(uuid())

  totalAnswerId   String 
  totalAnswer     ParticipantTotalAnswer @relation(fields: [totalAnswerId], references: [id], onDelete: Cascade)
  
}