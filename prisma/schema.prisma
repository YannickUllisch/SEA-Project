generator client {
  provider = "prisma-client-js"
    binaryTargets = ["native", "darwin-arm64", "darwin"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model dbUser {
  id            String @default(uuid()) @id
  name          String
  password      String
  role          Int

  experiments    dbExperiment[]
}

model dbExperiment {
  experimentID                     String      @id @default(uuid())
  title                  String
  questionnaireID        dbQuestionnaire[]
  users                  dbUser[]
  description            String
}

// Define the Question model
model dbQuestionnaire {
  questionnaireID                    String       @id @default(uuid())
  // Every questionnaires belongs to some specific 
  experiment            dbExperiment   @relation(fields: [experimentId], references: [experimentID])
  experimentId          String
  questionnaireAnswersID  dbQuestionnaireAnswers[]
  version               String
  form                  String
}

model dbQuestionnaireAnswers {
  questionnaireAnswersID                    String       @id @default(uuid())
  // Every questionnaires belongs to some specific 
  questionnaire            dbQuestionnaire   @relation(fields: [questionnaireId], references: [questionnaireID])
  questionnaireId          String
  answers                  String
}

