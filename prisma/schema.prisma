generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "darwin-arm64", "darwin"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model dbUser {
  id            String @default(uuid()) @id
  name          String
  password      String
  role          Int

  experiments    dbExperiment[]
}

model dbExperiment {
  id                     String      @id @default(uuid())
  title                  String
  description            String
  questionnaireID        dbQuestionnaire[]
  users                  dbUser[]
}

model dbQuestionnaire {
  id                    String       @id @default(uuid())
  experimentId          String
  experiment            dbExperiment   @relation(fields: [experimentId], references: [id])
  questionnaireAnswersID  dbQuestionnaireAnswers[]
  version               String?
  form                  String
}

model dbQuestionnaireAnswers {
  id              String        @id @default(uuid())
  questionnaireId String
  questionnaire   dbQuestionnaire @relation(fields: [questionnaireId], references: [id])
  answers         String
  age             Int?
  gender          String?
  country         String?
}
